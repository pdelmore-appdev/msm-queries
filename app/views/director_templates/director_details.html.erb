<h1>Director #<%= @the_director.id %> details</h1>

<p>
<a href="/directors"> Go back</a>  |  <a href="/delete_director/<%= @the_director.id %>">Delete director</a>
</p>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_director.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_director.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
   <%= @the_director.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
  <img src="http://robohash.org/<%= @the_director.image %>">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_director.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_director.updated_at) %> ago
  </dd>
</dl>


<%# movie table %>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tbody>

  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>

  <% @filmography.each do |film| %>

  <tr>
    <td>
        <%= film.id %>  
    </td>

    <td>
      <img src="https://robohash.org/<%= film.image %>?set=set4">
    </td>

    <td>
      <%= film.title %>
    </td>

    <td>
      <%= film.year %>
    </td>

    <td>

    <% d = Director.where({ :id => film.director_id }).at(0) %>
      <%= d.name %>
    </td>

    <td>
      <a href="/movies/<%= film.id%>">
        Show details
      </a>
    </td>
  </tr>

    <% end %>

</tbody></table>
